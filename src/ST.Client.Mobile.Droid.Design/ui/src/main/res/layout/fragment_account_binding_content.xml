<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xamarin="http://schemas.xamarin.com/android/xamarin/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xamarin:managedType="AndroidX.ConstraintLayout.Widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/activity_horizontal_margin"
        xamarin:managedType="AndroidX.ConstraintLayout.Widget.Guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/activity_horizontal_margin"
        xamarin:managedType="AndroidX.ConstraintLayout.Widget.Guideline" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccountBindSteam"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:textSize="@dimen/input_font_size_min"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindSteam"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindSteam"
        tools:text="绑定"
        xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutAccountBindSteam"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toStartOf="@+id/btnAccountBindSteam"
        app:layout_constraintStart_toEndOf="@+id/ivIconAccountBindSteam"
        app:layout_constraintTop_toTopOf="parent"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbAccountBindSteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            tools:hint="未绑定"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconAccountBindSteam"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindSteam"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindSteam"
        app:srcCompat="@drawable/icon_steam_24"
        app:tint="@color/icon_background"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccountBindMicrosoft"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:textSize="@dimen/input_font_size_min"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindMicrosoft"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindMicrosoft"
        tools:text="绑定"
        xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutAccountBindMicrosoft"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toStartOf="@+id/btnAccountBindMicrosoft"
        app:layout_constraintStart_toEndOf="@+id/ivIconAccountBindMicrosoft"
        app:layout_constraintTop_toBottomOf="@+id/layoutAccountBindSteam"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbAccountBindMicrosoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            tools:hint="未绑定"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconAccountBindMicrosoft"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindMicrosoft"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindMicrosoft"
        app:srcCompat="@drawable/icon_xbox_24"
        app:tint="@color/icon_background"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccountBindApple"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:textSize="@dimen/input_font_size_min"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindApple"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindApple"
        tools:text="绑定"
        xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutAccountBindApple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toStartOf="@+id/btnAccountBindApple"
        app:layout_constraintStart_toEndOf="@+id/ivIconAccountBindApple"
        app:layout_constraintTop_toBottomOf="@+id/layoutAccountBindMicrosoft"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbAccountBindApple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            tools:hint="未绑定"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconAccountBindApple"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindApple"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindApple"
        app:srcCompat="@drawable/icon_apple_24"
        app:tint="@color/icon_background"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccountBindQQ"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:insetBottom="0dp"
        android:textAllCaps="false"
        android:textSize="@dimen/input_font_size_min"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindQQ"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindQQ"
        tools:text="绑定"
        xamarin:managedType="Google.Android.Material.Button.MaterialButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutAccountBindQQ"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toStartOf="@+id/btnAccountBindQQ"
        app:layout_constraintStart_toEndOf="@+id/ivIconAccountBindQQ"
        app:layout_constraintTop_toBottomOf="@+id/layoutAccountBindApple"
        xamarin:managedType="Google.Android.Material.TextField.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbAccountBindQQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            tools:hint="未绑定"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconAccountBindQQ"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutAccountBindQQ"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
        app:layout_constraintTop_toTopOf="@+id/layoutAccountBindQQ"
        app:srcCompat="@drawable/icon_qq_24"
        app:tint="@color/icon_background"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAccountBindTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_begin"
        app:layout_constraintTop_toBottomOf="@+id/layoutAccountBindQQ"
        tools:text="解绑第三方账号需要已绑定手机号才能解绑，如果要将已绑定第三方账号换绑至另一个账号，可以使用 [关于-此软件-账号注销] 注销已绑定的账号。"
        xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountBindTip" />

</androidx.constraintlayout.widget.ConstraintLayout>
